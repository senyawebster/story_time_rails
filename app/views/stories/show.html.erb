<% content_for(:title, @story.title) %>
<h1><%= @story.title %></h1>

<% if @story.chapters.any? %>
  <% @story.chapters.each do |chapter| %>
    <p>
      <%= link_to chapter.sentence, story_chapter_path(@story, chapter)%>,
    </p>
  <% end %>
<% else %>
  <p>There are no chapters yet!</p>
<% end %>

<%= link_to "New Chapter", new_story_chapter_path(@story) %>

<%= render "form" %>

<h3><a href="/stories">Stories</a></h3>

<%= link_to "Delete", story_path(@story),
                                 :data => {:confirm => "Are you sure?",
                                                    :method => "delete"} %>
